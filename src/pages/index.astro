---
import Layout from '../layouts/Layout.astro';
import { FaGithub } from 'react-icons/fa';
import { FaLinkedin } from 'react-icons/fa6';
import Section from '../components/Section.astro';
import Toolbox from '../components/sections/Toolbox.astro';
import Projects from '../components/sections/Projects';
import '@/styles/globals.css';
import Experience from '@/components/sections/Experience.astro';
---

<Layout title="Alex Rowe">
  <nav>
    <ul id="navbar">
      <li class="nav-item"><a href="#Projects">Projects</a></li>
      <li class="nav-item"><a href="#Experience">Experience</a></li>
    </ul>
  </nav>

  <main>
    <div id="signature">
      <h1>Alex Rowe</h1>
      <div class="row">
        <a
          aria-label="Github"
          href="https://github.com/Andes0113"
          target="_blank"
        >
          <FaGithub size={30} color="#f5f5f5" />
        </a>
        <a
          aria-label="LinkedIn"
          href="https://www.linkedin.com/in/alex-rowe-code/"
          target="_blank"
        >
          <FaLinkedin size={35} color="#0077B5" />
        </a>
      </div>
    </div>
    <h2>
      Hey there - I'm Alex, a backend engineer with skills across the full
      stack.
    </h2>
    <div id="spacer"></div>
    <Section title="About Me" still><p>test</p></Section>
    <Section title="My Toolbox" fromBottom>
      <Toolbox />
    </Section>
    <Section title="Experience" fromRight><Experience /></Section>
    <Section title="Projects" fromLeft><Projects client:load /></Section>
  </main>
</Layout>

<style>
  h1 {
    font-size: 3rem;
  }
  #spacer {
    height: 100vh;
  }
  .row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  #signature {
    display: flex;
    justify-content: center;
    align-items: start;
    flex-direction: column;
    gap: 0.5rem;
  }
  main {
    margin: auto;
    padding: 1rem;
    width: 1000px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  nav ul {
    padding: 0.25rem 0.5rem;
    display: flex;
    justify-content: end;
    gap: 1rem;
  }
  .nav-item {
    list-style-type: none;
    text-decoration: none;
  }
  .nav-item a {
    text-decoration: none;
    color: rgb(184, 183, 183);
    font-size: 1rem;
    transition: 300ms;
  }
  .nav-item a:hover {
    color: white;
  }
</style>
