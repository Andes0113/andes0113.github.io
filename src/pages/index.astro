---
import Layout from '../layouts/Layout.astro';
import { FaGithub } from 'react-icons/fa';
import { FaLinkedin } from 'react-icons/fa6';
---

<Layout title="Alex Rowe">
  <nav>
    <ul id="navbar">
      <li class="nav-item"><a href="#projects">Projects</a></li>
      <li class="nav-item"><a href="#experience">Experience</a></li>
    </ul>
  </nav>

  <main>
    <div id="signature">
      <h1>Alex Rowe</h1>
      <div class="row">
        <a href="https://github.com/Andes0113" target="_blank">
          <FaGithub size={30} color="#f5f5f5" />
        </a>
        <a href="https://www.linkedin.com/in/alex-rowe-code/" target="_blank">
          <FaLinkedin size={35} color="#0077B5" />
        </a>
      </div>
    </div>
    <h3>Hey there - I'm Alex, a full stack engineer.</h3>
    <div class="section">
      <h3>About Me</h3>
    </div>
  </main>
</Layout>

<style>
  .row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  #signature {
    display: flex;
    justify-content: center;
    align-items: start;
    flex-direction: column;
    gap: 0.5rem;
  }
  main {
    margin: auto;
    padding: 1rem;
    width: 1000px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  p {
    padding: 0rem;
    margin: 0rem;
    color: rgb(184, 183, 183);
    font-size: medium;
  }
  h3 {
    font-weight: 200;
    padding: 0rem;
    margin: 0rem;
    color: rgb(184, 183, 183);
    font-size: 20px;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    text-align: left;
    margin-bottom: 0.1rem;
  }
  nav ul {
    padding: 0.25rem 0.5rem;
    display: flex;
    justify-content: end;
    gap: 1rem;
  }
  .nav-item {
    list-style-type: none;
    text-decoration: none;
  }
  .nav-item a {
    text-decoration: none;
    color: rgb(184, 183, 183);
    font-size: 1rem;
    transition: 300ms;
  }
  .nav-item a:hover {
    color: white;
  }
  .section {
    border: 1px solid red;
    padding: 0.5rem 1rem;
    margin-top: 2rem;
    border-radius: 3px;
  }
</style>
